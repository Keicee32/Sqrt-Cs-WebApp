@{
    ViewData["Title"] = "Square Root Page";
}

<div class="text-center">
    <h1 class="display-4">Square Root Calculator</h1>
    
    @* <p>The result is: @ViewBag.Result</p>
    <p>The result is: @ViewBag.Result2</p> *@

    <p> @ViewBag.Result</p>
