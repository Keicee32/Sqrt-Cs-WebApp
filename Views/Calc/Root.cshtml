    <form asp-controller="Calc" asp-action="Root" method="POST">
        First: <input type="number" placeholder="First Number" name="firstNumber" required><br/>
        second: <input type="number" placeholder="Second Number" name="secondNumber" required><br/>
        <button type="submit"> Submit </button>

    </form>

</div>